{
  "packageManagers": {
    "default": "npm",
    "validManagers": [
      "npm",
      "pnpm",
      "Yarn"
    ],
    "publishTo": [
      "npm",
      "pnpm",
      "Yarn"
    ]
  },
  "directories": {
    "sources": {
      "js": "src",
      "ts": "src",
      "json": "src",
      "md": "src"
    },
    "test": {
      "js": "test",
      "ts": "test",
      "json": "test"
    }
  },
  "testingFramework": {
    "default": "mocha",
    "choices": [
      "jasmine",
      "jest",
      "mocha",
      "node"
    ]
  },
  "assertionLibrary": {
    "default": "chai",
    "choices": [
      "chai",
      "jasmine",
      "jest",
      "node"
    ]
  },
  "useTypescript": true,
  "optionalDependencies": {
    "typescript": {
      "default": "@latest"
    },
    "mocha": {
      "default": "@latest"
    }
  }
  }
}
